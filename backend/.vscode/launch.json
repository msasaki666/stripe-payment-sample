{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "launch server",
      "type": "go",
      "request": "launch",
      "mode": "remote",
      "debugAdapter": "dlv-dap",
      "remotePath": "${workspaceFolder}",
      "port": 2345,
      "host": "127.0.0.1"
    },
    {
      "name": "Attach to Server",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "remotePath": "/app",
      "port": 40000,
      "host": "localhost",
      "showLog": true
    }
  ]
}
